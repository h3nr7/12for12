{
    "compilerOptions": {
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "lib": ["es6", "dom"],
        "target": "es6",
        "jsx": "react",
        "moduleResolution": "node",
        "types": [
            "react",
            "jest",
            "node"
        ],
        "typeRoots": [
            "../../node_modules/@types",
            "../shared/typings"
        ]
    },
    "include": [
        "./**/*.*",
        "../shared/typings/**/*.d.ts"
    ],
    "exclude": [
      "node_modules",
      "build",
      "./**/*.spec.ts"
    ]
}