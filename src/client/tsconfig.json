{
    "compilerOptions": {
        "sourceMap": true,
        "allowJs": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "lib": ["es6", "dom"],
        "target": "es6",
        "jsx": "react",
        "moduleResolution": "node",
        "typeRoots": [
            "node_modules/@types",
            "../shared/typings"
        ]
    },
    "include": [
      "./**/*"
    ],
    "exclude": [
      "node_modules",
      "../shared/typings",
      "./**/*.spec.ts"
    ]
}